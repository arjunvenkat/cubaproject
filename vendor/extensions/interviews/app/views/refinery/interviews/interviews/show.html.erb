<% content_for :body_content_title do %>
  <%= @interview.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @interview.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @interview.last_name %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @interview.city %>
    </p>
  </section>
  <section>
    <h1>Date Of Entry</h1>
    <p>
      <%=raw @interview.date_of_entry %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @interview.description %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @interview.picture, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="interviews">
      <% @interviews.each do |interview| %>
        <li>
          <%= link_to interview.first_name, refinery.interviews_interview_path(interview) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
