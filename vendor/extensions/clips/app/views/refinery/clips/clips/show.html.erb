<% content_for :body_content_title do %>
  <%= @clip.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @clip.name %>
    </p>
  </section>
  <section>
    <h1>Length</h1>
    <p>
      <%=raw @clip.length %>
    </p>
  </section>
  <section>
    <h1>File</h1>
    <p>
      <% if @clip.file.present? %>
        <%= link_to 'file', @clip.file.url %>
      <% else %>
        file
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="clips">
      <% @clips.each do |clip| %>
        <li>
          <%= link_to clip.name, refinery.clips_clip_path(clip) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
