<ul>
  <% if ::Refinery::Clips::Admin::ClipsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.clips_admin_clips_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_clips_admin_clip_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Clips::Admin::ClipsController.sortable? && ::Refinery::Clips::Clip.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Clips"),
                 refinery.clips_admin_clips_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Clips"),
                 refinery.clips_admin_clips_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
