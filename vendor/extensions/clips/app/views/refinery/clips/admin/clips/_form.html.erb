<%= form_for [refinery, :clips_admin, @clip] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @clip,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :length -%>
    <%= f.text_field :length  -%>

  </div>
  
  <div class='field'>
    <%= f.label :file -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :file_id,
               :resource => @clip.file %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.clips.admin.clips.clip'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @clip.name) %>
<% end -%>
