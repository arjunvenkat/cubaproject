<% content_for :javascripts do %>
  <%= javascript_include_tag 'map_home' %>
<% end %>
<% interview = @interviews.last %>

<div class="row">
  <% if interview %>
  <div class="title span12">
    <% if ::I18n.locale == :es %>
      <h2 class="page-heading">Nuestra última entrevista - <%= interview.full_name %> </h2>
    <% else %>
      <h2 class="page-heading">Our latest interview - <%= interview.full_name %> </h2>
    <% end %>
  </div>
    <div id="first-history">
      <div class="span7">
        <div id="map-home"></div>
        <div class="history">
          <div class="histories-heading">
            <div class="content-container">
              <a name="<%= interview.full_name.parameterize %>" class="anchor" ></a>
              <h3><%= interview.full_name %></h3>
              <% if ::I18n.locale == :es %>
                <h4><%= interview.city%> - Entró en US <%= interview.date_of_entry %> </h4>
              <% else %>
                <h4><%= interview.city%> - Entered US on <%= interview.date_of_entry %> </h4>
              <% end %>
            </div>
          </div>
          <div id="interview-text">
            <div class="content-container">
              <% if ::I18n.locale == :es %>
                <%= simple_format interview.description_es %>
              <% else %>
                <%= simple_format interview.description %>
              <% end %>
              <br />
              <% unless interview.clips.empty? %>
                <% if ::I18n.locale == :es %>
                  <h4>Fragmentos de Entrevistas</h4>
                <% else %>
                  <h4>Interview Clips</h4>
                <% end %>
              <% end %>
              <ul class="clips">
                <% interview.clips.each do |clip| %>
                  <% file = ::Refinery::Resource.find_by_id(clip.file_id) %>
                  <% if ::I18n.locale == :es %>
                    <li><%= link_to clip.name_es, "/es/clips/#{clip.id}" %></li>
                  <% else %>
                    <li><%= link_to clip.name, "/clips/#{clip.id}" %></li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="span5">
        <div class="image-container">
          <% picture = ::Refinery::Image.find_by_id(interview.picture_id) %>
          <%= image_tag(picture.url) %>
          <%#= image_tag(interview.images[i].url) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
