<div class="row">
  <div class="title span12">
    <div class="inline">
      <h2 class="page-heading inline"><%= @page.title %></h2>
    </div>
  </div>
  <div id="about" class="span12">
    <% @page.parts.each_with_index do |part, i| %>
      <% if i.even? %>
        <div class="row">
          <div class="span7">
            <div class="text-container content-container">
            <%= simple_format part.body %>
            </div>
          </div>
          <div class="span5">
            <% if @page.images[i] %>
              <div class="image-container">
                <%= image_tag(@page.images[i].url) %>
              </div>
            <% end %>
          </div>
        </div>
        <br />
      <% else %>
        <div class="row">
          <div class="span5">
            <% if @page.images[i] %>
              <div class="image-container">
                <%= image_tag(@page.images[i].url) %>
              </div>
            <% end %>
          </div>
          <div class="span7">
            <div class="text-container content-container">
            <%= simple_format part.body %>
            </div>
          </div>
        </div>
        <br />
      <% end %>
    <% end %>
  </div>
</div>
